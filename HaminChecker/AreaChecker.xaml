<Window x:Class="HaminChecker.AreaChecker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HaminChecker"
        mc:Ignorable="d"
        Title="AreaChecker" Height="300" Width="300">
    <DataGrid Name="DgArea" VerticalScrollBarVisibility="Auto" AutoGenerateColumns="False" SelectionMode="Single" Margin="2">
        <DataGrid.Columns>
            <DataGridTextColumn Header="番号" Binding="{Binding No}" IsReadOnly="True"/>
            <DataGridTextColumn Header="名前" Binding="{Binding Name}" IsReadOnly="True"/>
            <DataGridTextColumn Header="住所" Binding="{Binding Address}" IsReadOnly="True"/>
        </DataGrid.Columns>
    </DataGrid>
</Window>
