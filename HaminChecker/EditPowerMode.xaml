<UserControl x:Class="HaminChecker.EditPowerMode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HaminChecker"
             mc:Ignorable="d">
	<DockPanel>
		<Button Name="BtAddRow" DockPanel.Dock="Bottom" Width="auto" Content="AddRows" Click="BtAddRow_Click" Margin="5"/>
		<DataGrid Name="DgModes" VerticalScrollBarVisibility="Auto" AutoGenerateColumns="False" CanUserSortColumns="False" SelectionMode="Single" CanUserAddRows="True" Margin="5">
			<DataGrid.Columns>
				<DataGridTextColumn Header="カテゴリ記号" Binding="{Binding SuffixPowerSign}"/>
				<DataGridTextColumn Header="コンテストナンバ末尾" Binding="{Binding SuffixContestNo}"/>
				<DataGridTextColumn Header="部門名" Binding="{Binding Name}"/>
			</DataGrid.Columns>
		</DataGrid>
	</DockPanel>
</UserControl>
