<UserControl x:Class="HaminChecker.AreaPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HaminChecker"
             mc:Ignorable="d" >
    <DockPanel Margin="2">
        <DockPanel DockPanel.Dock="Bottom">
            <Button Name="BtAreaChk" Content="Check" DockPanel.Dock="Right" Click="BtAreaChk_Click"  Margin="2"/>
            <Label/>
        </DockPanel>
        <TextBox Name="TbArea" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="2"/>
    </DockPanel>
</UserControl>
